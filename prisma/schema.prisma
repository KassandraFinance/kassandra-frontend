generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model sharedImageFund {
  id        String   @id @default(uuid())
  contract  String
  image     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("shared_img_funds")
}

model User {
  walletAddress   String   @id @map("wallet_address")
  nickname        String?  @unique
  twitter         String?
  website         String?
  telegram        String?
  discord         String?
  description     String?
  image           String?
  isNFT           Boolean? @default(false) @map("is_nft")
  nft             Nft?
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  nftContractType String?

  @@map("users")
}

model Nft {
  contractType      String  @id @map("contract_type")
  collectionName    String?
  symbol            String?
  tokenAddress      String? @map("token_address")
  tokenId           String? @map("token_id")
  chain             String
  name              String?
  desciption        String?
  user              User    @relation(fields: [userWalletAddress], references: [walletAddress])
  userWalletAddress String  @unique
}
