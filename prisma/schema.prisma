generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model sharedImageFund {
  id        String   @id @default(uuid())
  contract  String
  image     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("shared_img_funds")
}

model User {
  walletAddress String   @id @map("wallet_address")
  nickname      String?  @unique
  twitter       String?
  website       String?
  telegram      String?
  discord       String?
  description   String?
  image         String?
  isNFT         Boolean? @default(false) @map("is_nft")

  contractType   String? @map("contract_type")
  collectionName String? @map("collection_name")
  symbol         String?
  tokenAddress   String? @map("token_address")
  tokenId        String? @map("token_id")
  chain          String?
  nftName        String? @map("nft_name")
  nftDescription String? @map("nft_description")

  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  nftContractType String?

  @@map("users")
}
